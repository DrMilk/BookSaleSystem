<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content"
    android:background="@mipmap/make_poem_season_bg"
    android:orientation="vertical">
        <RelativeLayout
            android:elevation="6dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/pink_red_toobar">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细信息"
                android:layout_gravity="center"
                android:theme="@style/title_font"/>
            <LinearLayout
                android:id="@+id/detail_spot_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/activity_left_normal_chg"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:layout_gravity="center"
                    android:theme="@style/bottom_titil_font"/>
            </LinearLayout>
            <TextView
                android:id="@+id/detail_spot_share"
                android:layout_marginRight="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:layout_gravity="center"
                android:theme="@style/bottom_titil_font"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ListView
                android:id="@+id/hotel_detail_list_remark"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
</LinearLayout>
