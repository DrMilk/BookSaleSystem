<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/detail_head_img"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@color/black_alpha11">
            <TextView
                android:id="@+id/detail_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white_smoke"
                android:text="上海一日游"/>
            <TextView
                android:id="@+id/detail_head_price_sign"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/red"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/detail_head_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textStyle="italic"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/detail_head_context"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/context_text"
            android:text="19"/>
        <Button
            android:id="@+id/add_shop"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_bg_red"
            android:textColor="@color/white_smoke"
            android:textSize="12sp"
            android:text="加入购物车"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gold_yellow">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="italic"
            android:textColor="@color/white_smoke"
            android:text="评论"/>
    </LinearLayout>
</LinearLayout>