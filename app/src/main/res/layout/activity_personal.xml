<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:elevation="6dp"
        android:background="@color/mp_blue">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_gravity="center"
            android:theme="@style/title_font" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:id="@+id/header_headimg_bg"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tab_main_head">
                    <ImageView
                        android:id="@+id/header_headimg"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@mipmap/ohi"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户:"/>
                <TextView
                    android:id="@+id/personal_phone"
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名:"/>
                <EditText
                    android:id="@+id/personal_user"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:theme="@style/style_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱:"/>
                <EditText
                    android:id="@+id/personal_email"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/button_back"
                    android:background="@drawable/button_bg"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white_smoke"
                    android:text="  返回  "/>
                <Button
                    android:layout_marginLeft="28dp"
                    android:background="@drawable/button_bg"
                    android:id="@+id/button_ok"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white_smoke"
                    android:text="  提交  "/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>