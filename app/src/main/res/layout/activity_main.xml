<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_above="@id/activity_main_bottom"
        android:id="@+id/activity_main_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:id="@+id/activity_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="3dp"
        android:background="@mipmap/bg_for_welcome_area"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/activity_main_firsttab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bottom_img1"
                android:layout_width="40dp"
                android:tint="@color/white"
                android:layout_height="40dp"
                android:src="@mipmap/main_bottom_tab_home_focus"
                />
            <!--<TextView-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:theme="@style/bottom_titil_font"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="12sp"-->
                <!--android:text="首页"/>-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_travel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_img2"
                android:layout_width="30dp"
                android:tint="@color/white"
                android:layout_height="30dp"
                android:src="@mipmap/host_index_cart_icon"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:theme="@style/bottom_titil_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="分类"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_food"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_img3"
                android:layout_width="30dp"
                android:tint="@color/white"
                android:layout_height="30dp"
                android:src="@mipmap/host_index_cart_icon_s_food5"/>

            <TextView
                android:layout_marginTop="4dp"
                android:theme="@style/bottom_titil_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="动态"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_hotel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bottom_img4"
                android:layout_width="30dp"
                android:tint="@color/white"
                android:layout_height="30dp"
                android:src="@mipmap/host_index_home_icon"/>
            <TextView
                android:layout_marginTop="4dp"
                android:theme="@style/bottom_titil_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="购物车"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bottom_img5"
                android:layout_width="30dp"
                android:tint="@color/white"
                android:layout_height="30dp"
                android:src="@mipmap/host_index_mine_icon"/>
            <TextView
                android:layout_marginTop="4dp"
                android:theme="@style/bottom_titil_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="我"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
